{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=EICInventorySystem.db"
  },
  "Jwt": {
    "Secret": "YourSuperSecretKeyForJWTTokenGenerationMustBeAtLeast32CharactersLong!",
    "Issuer": "EICInventorySystem",
    "Audience": "EICInventorySystemUsers",
    "ExpirationInMinutes": 60,
    "RefreshTokenExpirationInDays": 7
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "CommanderReserve": {
    "DefaultPercentage": 25,
    "MinimumPercentage": 20,
    "MaximumPercentage": 30
  },
  "Inventory": {
    "LowStockThresholdPercentage": 20,
    "CriticalStockThresholdPercentage": 10,
    "EnableAutoReorder": false
  },
  "Notifications": {
    "EnableEmailNotifications": false,
    "EnableInAppNotifications": true,
    "LowStockAlertEnabled": true,
    "ReserveAlertEnabled": true,
    "ExpiryAlertEnabled": true,
    "ExpiryAlertDays": 30
  },
  "Audit": {
    "EnableAuditLogging": true,
    "AuditLogRetentionDays": 365,
    "LogFailedAttempts": true,
    "LogSuccessfulAttempts": true
  },
  "Security": {
    "EncryptionKey": "DefaultEncryptionKeyMustBe32CharsLong!!",
    "MaxLoginAttempts": 5,
    "LockoutDurationMinutes": 15,
    "PasswordMinLength": 8,
    "PasswordRequireUppercase": true,
    "PasswordRequireLowercase": true,
    "PasswordRequireNumbers": true,
    "PasswordRequireSpecialChars": true,
    "PasswordExpiryDays": 90,
    "EnableTwoFactorAuth": false
  },
  "Backup": {
    "EnableAutoBackup": true,
    "BackupSchedule": "Daily",
    "BackupTime": "02:00",
    "BackupRetentionDays": 30,
    "BackupPath": "./Backups"
  },
  "Maintenance": {
    "MaintenanceMode": false,
    "MaintenanceMessage": "System is under maintenance. Please try again later.",
    "MaintenanceMessageArabic": "النظام تحت الصيانة. يرجى المحاولة مرة أخرى لاحقاً."
  }
}